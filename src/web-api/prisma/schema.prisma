generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario{
  id String @id @default(uuid())
  nome String?
  cpf String?
  data_de_nascimento DateTime? 
  telefone String?
  endereco String?
  email String @unique
  flag_maior_idade Int?
  responsavel String?
  login String?
  senha String
  flag_admin Int? @default(1)
  dt_criacao DateTime? @default(now())

  @@map("Usuarios")
  agendas Agenda[]
}

model Servico{
  id String @id @default(uuid())
  nome String 
  preco Float
  descricao String
  dt_criacao DateTime? @default(now())

  @@map("servicos")
  agenda Agenda[]
}

model Agenda{
  id String @id @default(uuid())
  data_hora_atendimento DateTime?
  dt_criacao DateTime? @default(now())

  @@map("agendas")
  servico Servico @relation(fields: [servico_id], references: [id])
  servico_id String
  usuario Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId String
}

model UsuarioLog{
  id String @id @default(uuid())
  id_Usuario String
  nome String?
  cpf String?
  data_de_nascimento DateTime? 
  telefone String?
  endereco String?
  email String 
  flag_maior_idade Int?
  responsavel String?
  login String?
  senha String
  flag_admin Int? @default(1)
  dt_criacao DateTime? @default(now())
  mtv_inclusao String?
  dt_inclusao DateTime? @default(now())
  
  @@map("UsuariosLog")
}

model ServicoLog{
  id String @id @default(uuid())
  id_servico String
  nome String 
  preco Float
  descricao String
  dt_criacao DateTime? @default(now())
  mtv_inclusao String?
  dt_inclusao DateTime? @default(now())

  @@map("ServicosLog")
}

model AgendaLog{
  id String @id @default(uuid())
  id_agenda String
  data_hora_atendimento DateTime?
  dt_criacao DateTime? @default(now())
  mtv_inclusao String?
  dt_inclusao DateTime? @default(now())

  @@map("AgendasLog")
}